@{
  Layout = "Shared/_Layout.cshtml";
}

<div class="container">
  <form action="/result" method="post">
    <label for="word">Enter your Scrabble word to find its score: </label>
    <input type="text" name="word">

    <button type="submit" name="btn btn-danger">Submit</button>
  </form>

  @if(Model != null)
  {
    <h3>Word Score: @Model.FindPoints()</h3>
  }

</div>
